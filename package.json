{
  "name": "tanda-workforce-mcp-server",
  "version": "1.0.0",
  "description": "Production-ready MCP Server for Tanda Workforce API with OAuth2 authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:integration": "ts-node scripts/test-user-flow.ts",
    "test:claude": "ts-node scripts/test-claude-integration.ts",
    "test:tools": "ts-node scripts/test-all-tools.ts",
    "docker:build": "docker build -t tanda-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env tanda-mcp-server"
  },
  "keywords": [
    "mcp",
    "tanda",
    "workforce",
    "oauth",
    "api",
    "model-context-protocol"
  ],
  "author": "hakeemrabiuDFW",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
